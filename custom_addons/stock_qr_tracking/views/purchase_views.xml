<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="purchase_order_form_inherit_qr" model="ir.ui.view">
    <field name="name">purchase.order.form.qr</field>
    <field name="model">purchase.order</field>
    <field name="inherit_id" ref="purchase.purchase_order_form"/>
    <field name="arch" type="xml">
      <xpath expr="//header" position="inside">
        <button name="action_generate_qr" type="object" string="Generate QR" class="btn-secondary" attrs="{'invisible':[('qr_generated','=','True')]}"/>
        <button name="action_print_qr_labels" type="object" string="Print QR Labels" class="btn-primary" attrs="{'invisible':[('qr_generated','=',False)]}"/>
      </xpath>
    </field>
  </record>
</odoo>
