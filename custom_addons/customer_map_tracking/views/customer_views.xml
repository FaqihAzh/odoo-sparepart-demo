<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_customer_worker_tree" model="ir.ui.view">
        <field name="name">customer.worker.tree</field>
        <field name="model">customer.worker</field>
        <field name="arch" type="xml">
            <tree string="Customers">
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="latitude"/>
                <field name="longitude"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_customer_worker_form" model="ir.ui.view">
        <field name="name">customer.worker.form</field>
        <field name="model">customer.worker</field>
        <field name="arch" type="xml">
            <form string="Customer / Worker">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <group>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                        <note string="Tip: setelah membuka form, akan muncul tombol 'Pick on map' di samping field latitude. Klik untuk memilih titik di peta."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_customer_worker" model="ir.actions.act_window">
        <field name="name">Customers</field>
        <field name="res_model">customer.worker</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_customer_worker_tree"/>
    </record>

    <!-- Menu -->
    <menuitem id="menu_customer_root" name="Customer Map" sequence="10"/>
    <menuitem id="menu_customer_data" name="Customers" parent="menu_customer_root" action="action_customer_worker"/>

</odoo>
