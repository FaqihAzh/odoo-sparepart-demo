<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Bundle untuk custom JS -->
        <record id="customer_map_tracking_assets_backend" model="ir.asset">
            <field name="name">Customer Map Tracking Backend Assets</field>
            <field name="bundle">web._assets_backend</field>
            <field name="active" eval="True"/>
            <field name="path">customer_map_tracking/static/src/js/map_dashboard.js</field>
            <field name="path">customer_map_tracking/static/src/js/pick_on_map_widget.js</field>
            <field name="path">customer_map_tracking/static/src/xml/pick_on_map_templates.xml</field>
            <field name="path">customer_map_tracking/static/src/css/map_styles.css</field>
        </record>

        <!-- Bundle untuk Leaflet (CDN) -->
        <record id="customer_map_tracking_assets_backend_leaflet" model="ir.asset">
            <field name="name">Leaflet CDN Assets</field>
            <field name="bundle">web._assets_backend</field>
            <field name="active" eval="True"/>
            <field name="target">head</field>
            <field name="url">https://unpkg.com/leaflet@1.9.4/dist/leaflet.css</field>
            <field name="url">https://unpkg.com/leaflet@1.9.4/dist/leaflet.js</field>
        </record>
    </data>
</odoo>
