<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_customer_detail_wizard_form" model="ir.ui.view">
        <field name="name">customer.detail.wizard.form</field>
        <field name="model">customer.detail.wizard</field>
        <field name="arch" type="xml">
            <form string="Customer Detail" create="false" edit="false" delete="false">
                <group>
                    <field name="customer_id" invisible="1"/>
                    <field name="name" readonly="1"/>
                    <field name="email" readonly="1"/>
                    <field name="phone" readonly="1"/>
                    <field name="description" readonly="1"/>
                    <field name="latitude" readonly="1"/>
                    <field name="longitude" readonly="1"/>
                </group>
                <footer>
                    <button string="Close" class="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
